<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AiMediaGenerator.MainPage"
             Title="AiMediaGenerator">
  <ScrollView>
    <VerticalStackLayout Spacing="14">
      <Label Text="AI Media Generator" FontSize="28" FontAttributes="Bold"/>
      <Label Text="Cloud-first. Stelle API-URL und Key in Settings ein. WÃ¤hle unten die Funktion."/>
      <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
        <Button Grid.Row="0" Grid.Column="0" Text="Img2Img" Clicked="OnImg2Img"/>
        <Button Grid.Row="0" Grid.Column="1" Text="Inpaint" Clicked="OnInpaint"/>
        <Button Grid.Row="1" Grid.Column="0" Text="Video" Clicked="OnVideo"/>
        <Button Grid.Row="1" Grid.Column="1" Text="History" Clicked="OnHistory"/>
      </Grid>
      <Frame BackgroundColor="{StaticResource Card}" Padding="12">
        <Label Text="Status:" FontAttributes="Bold"/>
        <Label x:Name="StatusLabel" Text="Bereit" />
      </Frame>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
