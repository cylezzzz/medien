<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="AiMediaGenerator.App">
  <Application.Resources>
    <ResourceDictionary>
      <Color x:Key="Bg">#0B0F1A</Color>
      <Color x:Key="Card">#141B2D</Color>
      <Color x:Key="Accent">#5AE3FF</Color>
      <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource Bg}" />
        <Setter Property="Padding" Value="16" />
      </Style>
      <Style TargetType="Label">
        <Setter Property="TextColor" Value="White" />
      </Style>
      <Style TargetType="Entry">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="PlaceholderColor" Value="#8890A6"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Card}"/>
      </Style>
      <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Accent}"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,10"/>
      </Style>
      <Style TargetType="Editor">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="PlaceholderColor" Value="#8890A6"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Card}"/>
      </Style>
    </ResourceDictionary>
  </Application.Resources>
</Application>
