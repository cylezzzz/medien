<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AiMediaGenerator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AiMediaGenerator"
    xmlns:views="clr-namespace:AiMediaGenerator.Views"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="{StaticResource Bg}">
  <TabBar>
    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Title="Img2Img" ContentTemplate="{DataTemplate views:Img2ImgPage}" />
    <ShellContent Title="Inpaint" ContentTemplate="{DataTemplate views:InpaintPage}" />
    <ShellContent Title="Video" ContentTemplate="{DataTemplate views:VideoPage}" />
    <ShellContent Title="History" ContentTemplate="{DataTemplate views:HistoryPage}" />
    <ShellContent Title="Settings" ContentTemplate="{DataTemplate views:SettingsPage}" />
  </TabBar>
</Shell>
