<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AiMediaGenerator.Views.HistoryPage"
             Title="History">
  <ScrollView>
    <VerticalStackLayout Spacing="8">
      <Label Text="Verlauf (lokal gespeichert)" FontAttributes="Bold" FontSize="20"/>
      <CollectionView x:Name="JobsList">
        <CollectionView.ItemTemplate>
          <DataTemplate>
            <Frame Padding="10" Margin="0,6" BackgroundColor="{StaticResource Card}">
              <VerticalStackLayout Spacing="4">
                <Label Text="{Binding Type}" FontAttributes="Bold"/>
                <Label Text="{Binding Prompt}" LineBreakMode="WordWrap"/>
                <Label Text="{Binding CreatedAt}" FontSize="12"/>
                <Label Text="{Binding ResultUrl}" TextColor="{StaticResource Accent}"/>
              </VerticalStackLayout>
            </Frame>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>
      <Button Text="Verlauf leeren" Clicked="OnClear"/>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
