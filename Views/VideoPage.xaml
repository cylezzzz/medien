<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AiMediaGenerator.Views.VideoPage"
             Title="Video">
  <ScrollView>
    <VerticalStackLayout Spacing="12">
      <Label Text="Video Generation — Startbild wählen, Prompt eingeben." FontAttributes="Bold" FontSize="20"/>
      <Label x:Name="LimitsLabel" FontSize="12" Opacity="0.85"/>
      <Image x:Name="Preview" HeightRequest="200" Aspect="AspectFit"/>
      <Button Text="Bild wählen" Clicked="OnPickImage"/>
      <Entry x:Name="PromptEntry" Placeholder="Prompt"/>
      <Entry x:Name="FramesEntry" Placeholder="Frames (z.B. 24)" Keyboard="Numeric"/>
      <Entry x:Name="FpsEntry" Placeholder="FPS (z.B. 8)" Keyboard="Numeric"/>
      <Button Text="Generate Video (Cloud)" Clicked="OnGenerateVideo"/>
      <Label x:Name="StatusLabel" Text="Bereit"/>
      <Label x:Name="ResultLabel" Text=""/>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
